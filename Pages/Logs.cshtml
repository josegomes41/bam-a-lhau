@page "{CorrelationId}"
@model bamalhau.Pages.LogsPageModel
@using System.Text.Json

@{
    ViewData["Title"] = "Logs";
}

<h2>Logs for Correlation ID: @Model.CorrelationId</h2>
<h3>Number Of Log @Model.LogCount</h3>


<div class="form-group " style="margin: 20px 0px">
    <input type="text" id="applicationSearchInput" class="form-control" placeholder="Search by Application">
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">Application</th>
            <th scope="col">Date</th>
            <th scope="col">Log Resume</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var item in Model.Logs ?? Enumerable.Empty<Log>())
        {
            <tr class="table-info">

                <th class="applicationCol"><p>@item.Application</p></th>
                <td scope="row">
                    @{
                        DateTime dateTime = DateTime.Parse(item.UpdateDate, null, System.Globalization.DateTimeStyles.RoundtripKind);
                        string formattedDate = dateTime.ToString("yyyy-MM-dd HH:mm:ss");
                    }
                    @formattedDate
                </td>
                @{
                    // Assuming item.UpdateDate contains the JSON string
                    var logjson = JsonSerializer.Deserialize<object>(item.log);

                    var options = new JsonSerializerOptions
                {
                    WriteIndented = true
                    
                };
                    string prettyJson = JsonSerializer.Serialize(logjson, options);
                }
                <td><pre title="@prettyJson">@item.resume</pre></td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Logs?.Any() ?? true)
{
    <p>No logs found for this correlation ID.</p>
}
